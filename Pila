package ProyectoFinal_G4;

public class Pila {
    
    //Atributo
    private Nodo cima;

    //Constructor
    public Pila() {
        this.cima = null;
    }//Fin del constructor
    
    //Encapsuladores
    public Nodo getCima() {
        return cima;
    }

    public void setCima(Nodo cima) {
        this.cima = cima;
    }
    //Fin de encapsuladores

    //Método boolean para comprobar si la pila está vacía
    public boolean estaVacia() {
        return cima == null;
    }//Fin del método
    
